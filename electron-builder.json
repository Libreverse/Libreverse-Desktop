{
  "directories": {
    "output": "dist",
    "buildResources": "."
  },
  "appId": "com.Libreverse.desktop",
  "productName": "Libreverse Desktop",
  "icon": "icon.png",
  "publish": {
    "provider": "github",
    "owner": "Libreverse",
    "repo": "Libreverse-Desktop"
  },
  "files": [
    "main.js",
    "preload.js",
    "renderer.js",
    "index.html",
    "styles.css",
    "hinted-Hack-Regular.woff2",
    "icon.png",
    "package.json",
    "node_modules/**/*",
    "!node_modules/**/*.{md,MD,txt,TXT}",
    "!node_modules/**/test/**/*",
    "!node_modules/**/tests/**/*",
    "!node_modules/**/*.test.js",
    "!node_modules/**/*.spec.js"
  ],
  "extraFiles": [],
  "extraResources": [],
  "compression": "maximum",
  "removePackageScripts": true,
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "identity": null,
    "notarize": false,
    "sign": false
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "publisherName": "George Baskerville",
    "sign": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Network"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "beforeBuild": "scripts/before-build.js"
}