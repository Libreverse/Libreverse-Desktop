{
  "name": "libreverse-desktop",
  "version": "1.0.0",
  "description": "Desktop app for Libreverse instances",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev --enable-logging",
    "dev:performance": "electron . --dev --enable-logging --trace-warnings --trace-deprecation",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "test": "echo \"No tests specified\" && exit 0",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Libreverse/Libreverse-Desktop.git"
  },
  "homepage": "https://github.com/Libreverse/Libreverse-Desktop#readme",
  "bugs": {
    "url": "https://github.com/Libreverse/Libreverse-Desktop/issues"
  },
  "keywords": [
    "electron",
    "Libreverse",
    "desktop",
    "performance"
  ],
  "author": "George Baskerville",
  "license": "AGPL-3.0",
  "devDependencies": {
    "cssnano": "^7.0.7",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "htmlnano": "^2.1.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "terser": "^5.43.1",
    "terser-webpack-plugin": "^5.3.14"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.Libreverse.desktop",
    "productName": "Libreverse Desktop",
    "icon": "icon.png",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Libreverse",
      "repo": "Libreverse-Desktop"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "hinted-Hack-Regular.woff2",
      "icon.png",
      "node_modules/**/*"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "George Baskerville"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
